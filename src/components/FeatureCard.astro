---
interface Props {
    icon: string;
    title: string;
    description: string;
}

const { icon, title, description } = Astro.props;
---

<div class="h-52 w-96 bg-white rounded-md flex flex-col items-center p-4">
    <img src={icon} alt={title}>
    <h3 class="text-xl font-semibold text-fontColor">{title}</h3>
    <p class="text-sm text-center">{description}</p>
</div>
